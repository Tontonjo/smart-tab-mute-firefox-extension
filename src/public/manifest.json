{
  "manifest_version": 2,
  "name": "Smart Tab Mute 2023",
  "description": "Ensures that only one tab plays audio at the same time and unmute the previously audio playing tab when one stops",
  "version": "2.1.0",
  "icons": {
    "16": "images/icon128.png",
    "48": "images/icon128.png",
    "128": "images/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "applications": {
    "gecko": {
      "id": "smart-tab-mute@tontonjo.ch",
      "strict_min_version": "48.0"
    }
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
