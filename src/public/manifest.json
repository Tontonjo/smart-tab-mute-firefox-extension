{
  "manifest_version": 2,
  "name": "Smute - Smart Tab Mute",
  "description": "Ensures that only one tab plays sound at the same time",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon128.png",
    "48": "images/icon128.png",
    "128": "images/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
