html
  head
    title Smart Tab Mute - Options
    link(href="css/options.css" rel="stylesheet" type="text/css")
  body
    form.options
      .option
        label
          | Whitelisted domains (these tabs will never be muted)
          textarea(name="whitelist" rows="5")
          .hint Use this for websites you never want to see getting muted

      .option
        label
          | Tabs including the following domains will be ignored by Smart Tab Mute
          textarea(name="ignoreList" rows="5")
          .hint Use this for sites playing short sounds for notifications or games
        
      .option
        label
          input(type="checkbox" name="unmuteLastTab")
          |  Unmute last tab
          .hint Unmutes the previously muted tab
          
    
    script(src="js/options.js" type="text/javascript")
